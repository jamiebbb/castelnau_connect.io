{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jamiebbb/jamiebbb.github.io/main/project_data/assets_scores.csv"
  },
  "width": "container",
  "height": 300,
  "title": {
    "text": "Linear regression: Bitcoin Weekly Close Price against Gold Weekly Close Price",
    "fontSize": 20,
    "color": "cornflowerblue",
    "subtitle": "Weekly Average Close Price (USD) data from Investing.com, cleaned in Python. 25/07/10 - 12/12/21",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":12,
    "subtitleColor":"#170da49c",
    "anchor": "start"
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "CloseBTC",
          "type": "quantitative",
          "title": "Bitcoin Price",
          "axis": {
            "domain": true,
            "format": "$,.5"
          }
        },
        "y": {
          "field": "CloseGold",
          "type": "quantitative",
          "title": "Gold Price",
          "axis": {
            "domain": true,
            "format": "$,.5"
          }
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "burlywood",
        "opacity": 1,
        "thickness": 1,
        "tooltip": true
      },
      "transform": [
        {
          "regression": "CloseBTC",
          "on": "CloseGold"
        }
      ],
      "encoding": {
        "x": {
          "field": "CloseBTC",
          "type": "quantitative"
        },
        "y": {
          "field": "CloseGold",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "CloseBTC",
          "on": "CloseGold",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -10
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
