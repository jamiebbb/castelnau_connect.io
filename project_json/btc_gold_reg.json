{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jamiebbb/jamiebbb.github.io/main/project_data/assets_scores.csv"
  },
  "width": "container",
  "height": 300,
  "title": {
    "text": "Linear regression: Bitcoin against Gold",
    "color": "#0f3b06",
    "subtitle": "Weekly Average Close Price (USD). Data from Investing.com, cleaned in Python. 25/07/10 - 12/12/21",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "subtitleColor":"#2bea05",
    "anchor": "start"
  },

"transform": [
{"calculate": "year(datum.Date)", "as":"year"},
{"filter": "datum.year>=minYear"},
{"filter": "datum.year<=maxYear"}
],

"params": [    
      {"name":"minYear", "value":2010,
         "bind":{
           "input": "range",
           "min": 2010, 
           "max": 2021, 
           "step": 1,
           "name": "Start year:"}
      },
  
      {"name":"maxYear", "value":2021,
         "bind":{
           "input": "range",
           "min": 2010, 
           "max": 2021, 
           "step": 1,
           "name": "End year:"}
      }
    ],

  "layer": [
    {
      "mark": {
        "type": "circle",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "CloseBTC",
          "type": "quantitative",
          "title": "Bitcoin",
          "axis": {
            "domain": true,
            "labelColor": "#F7931A",
            "format": "$,.5"
          }
        },
        "y": {
          "field": "CloseGold",
          "type": "quantitative",
          "title": "Gold",
          "axis": {
            "domain": true,
            "labelColor": "#FFD700",
            "format": "$,.5"
          }
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "burlywood",
        "opacity": 1,
        "thickness": 1,
        "tooltip": true
      },
      "transform": [
        {
          "regression": "CloseBTC",
          "on": "CloseGold"
        }
      ],
      "encoding": {
        "x": {
          "field": "CloseBTC",
          "type": "quantitative"
        },
        "y": {
          "field": "CloseGold",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "CloseBTC",
          "on": "CloseGold",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -10
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
