{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


 "title": {
  "text": "Bitcoin (BTC): Price vs Volume",
  "subtitle":"Daily BTC high and low price (USD) against volume traded. Source: Investing.com",
  "fontSize": 20,
  "subtitleFontStyle":"italic",
  "subtitleFontSize":12,
  "color": "#F7931A",
  "subtitleColor":"#F7931A",
  "anchor": "start"
  },

  "width":"container",
  "height":300,



  "data": {
    "name":"myData",
    "url": "https://raw.githubusercontent.com/jamiebbb/jamiebbb.github.io/main/project_data/daily_btc_gold_data_19-07-2010.csv"},



  "transform": [
      {"calculate": "datum.HighBTC", "as": "High Price"},
      {"calculate": "datum.LowBTC", "as": "Low Price"},
      {"calculate": "datum.VolumeBTC", "as": "Volume"},
      {"calculate": "year(datum.Date)", "as": "year"},  
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"},
      {"calculate":"replace(datum.Change,'%','')/100", "as": "change"}
  ],
  
    "params": [    
      {"name":"minYear", "value":2010,
         "bind":{
           "input": "range",
           "min": 2010, 
           "max": 2021, 
           "step": 1,
           "name": "Start year:"}
      },
  
      {"name":"maxYear", "value":2021,
         "bind":{
           "input": "range",
           "min": 2010, 
           "max": 2021, 
           "step": 1,
           "name": "End year:"}
      }
    ],

  "encoding": {     
      "x": {
        "field": "Date",
        "title":null,
        "type": "temporal",
        "axis": {
          "grid": true,
          "labelColor": "darkgoldenrod"
        }
        }
        },
          
   "layer":[

      {"mark": {
          "type": "line",
          "point": false,
          "strokeWidth":1,
          "width": 1,
          "opacity": 1,
          "tooltip": true
        },

      "encoding": {
          "y": {
          "field": "High Price",
          "type": "quantitative",
          "title": "",
          "axis": {
            "grid": true,            
            "labelColor":"blue",
            "tickColor": "chocolate",
            "format": "$,.5"}      
            },

          "y2": {"field": "Low Price", "axis": {"format": "$,.5"}
          },
            
          "color": {
            "datum": "Price",
            "scale": {"range": ["blue", "red"]},
            "legend":{
              "orient": "top-left"}}}
      },

     {"mark": {
          "type": "line",
          "point": false,
          "strokeWidth":1,
    "interpolate": "linear",
    "color":"#FFD700",
    "opacity": 0.5,
    "size": 1,
    "tooltip": true
        },

      "encoding": {
          "y": {
          "field": "Volume",
          "type": "quantitative",
          "title": "",
          "axis": {
            "grid": false,
            "labelColor":"red",
            "tickColor": "pink"}
          
            },
            
          "color": {
            "datum": "Volume",
            "scale": {"range": ["orange", "hotpink"]},
            "legend":{
              "orient": "top-left"}}
        
        } 
    }
],

    "resolve": {"scale": {"y": "independent"}} 

}
