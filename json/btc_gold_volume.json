{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


 "title": {
  "text": "Weekly Volume Traded: Bitcoin and Gold",
  "subtitle":"BTC and Gold Volume. Source: Investing.com",
  "subtitleFontStyle":"italic",
  "subtitleFontSize":10,
  "color": "darkgreen",
  "subtitleColor":"darkgoldenrod",
  "anchor": "start"
  },

  "width":"container",
  "height":300,



  "data": {
    "name":"myData",
    "url": "https://raw.githubusercontent.com/jamiebbb/jamiebbb.github.io/main/project_data/btc_gold_weekly_19-07.2010.csv"},



  "transform": [
      {"calculate": "datum.HighBTC", "as": "High Price"},
      {"calculate": "datum.LowBTC", "as": "Low Price"},
      {"calculate": "datum.CloseBTC", "as": "Close Price"},
      {"calculate": "datum.VolumeBTC", "as": "Volume"},
      {"calculate": "year(datum.Date)", "as": "year"},  
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"},
      {"calculate":"replace(datum.Change,'%','')/100", "as": "change"}
  ],
  
    "params": [    
      {"name":"minYear", "value":2010,
         "bind":{
           "input": "range",
           "min": 2010, 
           "max": 2021, 
           "step": 1,
           "name": "Start year:"}
      },
  
      {"name":"maxYear", "value":2021,
         "bind":{
           "input": "range",
           "min": 2010, 
           "max": 2021, 
           "step": 1,
           "name": "End year:"}
      }
    ],

  "encoding": {     
      "x": {
        "field": "Date",
        "title":"Date",
        "type": "temporal",
        "axis": {
          "grid": true,
          "labelColor": "black"
        }
        }
        },
          
   "layer":[

      {"mark": {
          "type": "line",
          "point": false,
          "strokeWidth":1,
          "width": 1,
          "opacity": 1,
          "tooltip": true
        },

      "encoding": {
          "y": {
          "field": "VolumeBTC",
          "type": "quantitative",
          "title": "Volume Traded",
          "axis": {
            "grid": true,            
            "labelColor":"black",
            "tickColor": "black"} 

          },
            
          "color": {
            "datum": "Bitcoin",
            "scale": {"range": ["#F7931A", "#FFD700"]},
            "legend":{
              "orient": "top-left"}}}
      },

     {"mark": {
          "type": "line",
          "point": false,
          "strokeWidth":1,
    "interpolate": "linear",
    "color":"#FFD700",
    "opacity": 1,
    "size": 1,
    "tooltip": true
        },

      "encoding": {
          "y": {
          "field": "VolumeGold",
          "type": "quantitative",
          "title": "",
          "axis": {
            "grid": false,
            "labelColor":"red",
            "tickColor": "pink"}
          
            },
            
          "color": {
            "datum": "Gold",
            "scale": {"range": ["orange", "hotpink"]},
            "legend":{
              "orient": "top-left"}}
        
        } 
    }
]

}
