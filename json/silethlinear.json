{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jamiebbb/jamiebbb.github.io/main/data/ETH-USD%20monthly%20sep15-oct21.csv"
  },
  
  "height": 300,
  "width": "container",
  "title": {
    "text": "Linear regression: Ethereum on Silver",
    "subtitle": "Monthly open price (USD) data from Yahoo Finance (ETH) and Investing.com (SIL), 01/09/15 - 01/10/21",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "subtitleColor":"#2417db9c",
    "anchor": "start"
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "ETH Open",
          "title": "Ethereum",
          "type": "quantitative",
          "axis": {
            "domain": true,
            "format": "$,.5"
          }
        },
        "y": {
          "field": "Silver Open",
          "title": "Silver",
          "type": "quantitative",
          "axis": {
            "format": "$,.5"
          }
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "ETH Open",
          "on": "Silver Open"
        }
      ],
      "encoding": {
        "x": {
          "field": "ETH Open",
          "type": "quantitative"
        },
        "y": {
          "field": "Silver Open",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "ETH Open",
          "on": "Silver Open",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -10
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
